%table.table
  %tr
    %th
      Account name
    %th
      Funds
    %th
      Actions
  - @accounts.each do |account|
    %tr
      %td
        = account.name
      %td
        = number_to_currency(account.funds, unit: "MDL ")
      %td
        = link_to 'Edit', edit_account_path(account.id), class: "btn btn-xs btn-default"
        = link_to 'Delete', account_path(account.id), method: :delete, class: "btn btn-xs btn-danger"

= link_to 'Create account', new_account_path, class: "btn btn-default"
