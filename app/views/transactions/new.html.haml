= form_for @transaction, html: {class: "form-horizontal"} do |f|
  .form-group
    .col-sm-2
      = f.label :account_id, 'Account'
    .col-sm-10
      = f.select "account_id", @accounts.map {|a| [a.name, a.id]}, {}, { class: "form-control"}
  .form-group
    .col-sm-2
      = f.label :category_id, 'Category'
    .col-sm-10
      = f.select "category_id", @categories.map {|c| [c.name, c.id]}, {}, { class: "form-control" }
  .form-group
    .col-sm-2
      = f.label :amount, 'Amount'
    .col-sm-10
      = f.text_field :amount, class: "form-control"
  .form-group
    .col-sm-2
      = f.label 'Comment'
    .col-sm-10
      = f.text_field :comment, class: "form-control"
  .form-group
    .col-sm-2
      = f.submit class: "btn btn-default"
