.row
  .col-md-10
    %table.table
      %tr
        %th
          Date
        %th
          Account
        %th
          Category
        %th
          Amount
        %th
          Comment
        %th
          Actions
      - @transactions.each do |transaction|
        %tr
          %td
            = time_tag(transaction.created_at)
          %td
            = transaction.account.name
          %td
            = transaction.category.name
          %td
            = transaction.amount
          %td
            = transaction.comment
          %td
            = link_to 'Edit', edit_transaction_path(transaction.id), class: "btn btn-xs btn-default"
            = link_to 'Delete', transaction_path(transaction.id), method: :delete, class: "btn btn-xs btn-danger"
.row
  .col-md-12
    = link_to "Create Transaction", new_transaction_path, {class: "btn btn-default"}
